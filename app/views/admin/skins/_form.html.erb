<%# app/views/admin/skins/_form.html.erb %>
<%= form_with(model: [:admin, skin], local: true) do |form| %>
  <% if skin.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(skin.errors.count, "erro") %> impediu esta skin de ser salva:</h2>
      <ul>
        <% skin.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome da Skin" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :weapon, "Arma" %><br>
    <%= form.text_field :weapon %>
  </div>

  <div>
    <%= form.label :category, "Categoria" %><br>
    <%= form.text_field :category %> <%# Poderia ser um select depois %>
  </div>

  <div>
    <%= form.label :wear_level, "Desgaste" %><br>
    <%= form.text_field :wear_level %> <%# Poderia ser um select (FN, MW, etc.) %>
  </div>

  <div>
    <%= form.label :float_value, "Float" %><br>
    <%= form.number_field :float_value, step: :any %> <%# step :any permite decimais %>
  </div>

  <div>
    <%= form.label :pattern_template, "Pattern" %><br>
    <%= form.number_field :pattern_template %>
  </div>

  <div>
    <%= form.label :image_url, "URL da Imagem" %><br>
    <%= form.text_field :image_url %>
  </div>

  <div>
    <%= form.label :inspect_link, "Link de Inspeção" %><br>
    <%= form.text_field :inspect_link %>
  </div>

  <div>
    <%= form.label :price, "Preço (R$)" %><br>
    <%= form.number_field :price, step: 0.01 %> <%# step 0.01 permite centavos %>
  </div>

  <div>
    <%= form.check_box :for_sale %>
    <%= form.label :for_sale, "Listar para Venda?" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
